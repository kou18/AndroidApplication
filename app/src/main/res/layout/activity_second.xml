<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:orientation="vertical"
    android:background="#F5EBE8">

    <TextView
        android:id="@+id/Output"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:textSize="30sp"
        android:textColor="#000000"
        android:gravity="right"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/Clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Clear"
            android:textSize="30sp"
            android:background="#F93D06"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/Seven"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="35sp"
            />

        <Button
            android:id="@+id/Eight"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/Nine"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/Delete"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="DEL"
            android:textSize="35sp"
            android:layout_margin="5dp"
            android:background="#ECCF1B"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/Four"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/Five"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/Six"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/Multiply"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="35sp"
            android:background="@drawable/mybutton"
            android:textColor="#ffffff"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/Division"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="35sp"
            android:background="@drawable/mybutton"
            android:textColor="#ffffff"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/One"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/Two"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/Three"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/Minus"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="35sp"
            android:background="@drawable/mybutton"
            android:textColor="#ffffff"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/Plus"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="35sp"
            android:background="@drawable/mybutton"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/Zero"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="35sp"
            />

        <Button
            android:id="@+id/Dot"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="35sp"
            />

        <Button
            android:id="@+id/Equal"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="35sp"
            android:background="#70CF04"
            android:textColor="#ffffff"
            android:layout_margin="5dp"/>

    </LinearLayout>


</LinearLayout>